{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Deno Tests",
        "type": "pwa-node",
        "request": "launch",
        "runtimeExecutable": "deno",
        "runtimeArgs": [
          "test",
          "--allow-all",
          "--inspect-brk" // <- Important for debugging
